{
    "name": "cerpus/content-author",
    "description": "Cerpus Content Author.",
    "keywords": [
        "content author"
    ],
    "license": "GPL-3.0-only",
    "type": "project",
    "require": {
        "php": "8.2.*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-pdo": "*",
        "ext-zip": "*",
        "cerpus/cerpushelper": "^2.2",
        "cerpus/edlib-resource-kit": "^0.7.x-dev",
        "cerpus/edlib-resource-kit-laravel": "^0.7.x-dev",
        "cerpus/imageservice-client": "^2.2.1",
        "cerpus/questionbank-client": "^2.3.3",
        "ckeditor/ckeditor": "^4.22.1",
        "daniel-km/simple-iso-639-3": "^0.1.3",
        "doctrine/dbal": "^2.13.9",
        "embed/embed": "^3.4.18",
        "firebase/php-jwt": "^6.10.1",
        "guzzlehttp/guzzle": "^7.8.1",
        "h5p/h5p-core": "dev-master#f3579c0d28205bf34490ee151c07d43a2ffc3507",
        "h5p/h5p-editor": "dev-master#e442a251a6eda93043c637f5bf19beb60e92191b",
        "laravel/framework": "^9.52.16",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^3.4.6",
        "laravelcollective/html": "^6.4.1",
        "league/flysystem-aws-s3-v3": "^3.28",
        "league/flysystem-ziparchive": "^3.28",
        "league/fractal": "^0.20.1",
        "league/mime-type-detection": "^1.15",
        "masterminds/html5": "^2.9",
        "matthiasmullie/minify": "^1.3.73",
        "predis/predis": "^1.1.10",
        "ramsey/uuid": "^4.7.6",
        "spatie/laravel-ignition": "^1.6.4",
        "symfony/cache": "^6.4.7",
        "xemlock/htmlpurifier-html5": "^0.1.11"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.15.1",
        "ekino/phpstan-banned-code": "^1.0",
        "fakerphp/faker": "^1.23.1",
        "mockery/mockery": "^1.6.12",
        "larastan/larastan": "^v2.9.7",
        "phpstan/phpstan": "^1.11.2",
        "phpunit/phpunit": "^9.6.19",
        "symfony/css-selector": "^4.4.44"
    },
    "conflict": {
        "ckeditor/ckeditor": ">=4.23"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "vendor/h5p",
            "vendor/daniel-km/simple-iso-639-3/src"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
