server {
  listen  80;

  root         /var/www/edlibcommon/public;
  access_log   off;

  index        index.php;
  error_page   404 /index.php;

  location / {
    try_files  $uri $uri/ /index.php?$query_string;
  }

  location ~ \.php$ {
    try_files      $uri =404;
    include        fastcgi.conf;
    fastcgi_pass   ${PHP_FPM_HOST};
    fastcgi_index  index.php;
  }
}
